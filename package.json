{
  "name": "trail-bites-slack-bot",
  "version": "1.0.0",
  "description": "AI-powered Slack assistant for Trail Bites community",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "type-check": "tsc --noEmit",
    "postbuild": "ls -la dist/ || (echo 'Build failed: dist directory not found' && exit 1)"
  },
  "keywords": [
    "slack",
    "bot",
    "ai",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "@slack/web-api": "7.13.0",
    "dotenv": "^16.4.5",
    "openai": "^4.47.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
